#include<iostream>
using namespace std;

const int SIZE = 15;

void findMinMax(int inumbers[], int SIZE) {
	int i, min, max;
	max = min = inumbers[0];

	for (i = 1; i < SIZE; i++) {
		if (inumbers[i] > max) max = inumbers[i];
		else if (inumbers[i] < min) min = inumbers[i];
	}
	cout << endl << "최소값: " << min << endl << "최대값: " << max << endl;
}

int main() {
	int numberlist[SIZE] = { 100, 54, 66, 10, 7, 26, 98, 205, 35, 67, 84, 500, 0, 51, 72 };

	cout << "정수값:";
	for (int i = 0; i < SIZE; i++) {
		cout << "" << numberlist[i];
	}
	cout << endl;
	findMinMax(numberlist, SIZE);

	return 0;
}
